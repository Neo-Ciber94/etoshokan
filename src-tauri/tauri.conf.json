{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "etoshokan",
	"version": "0.1.0",
	"identifier": "com.neociber.etoshokan",
	"build": {
		"devUrl": "http://localhost:5173",
		"frontendDist": "../build",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun run build:static-web"
	},
	"app": {
		"windows": [
			{
				"title": "etoshokan",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"android": {
			"minSdkVersion": 28
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
